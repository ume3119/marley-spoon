<div class="container">
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="card">
          <img class="card-img-top" src="<%= https_image_url(recipe.photo.url) %>" alt="Card image cap">
          <div class="card-body">
              <h5 class="card-title"><%=recipe.title%></h5>
              <a href="/recipe/<%= recipe.id %>" class="btn btn-primary">Details</a>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>